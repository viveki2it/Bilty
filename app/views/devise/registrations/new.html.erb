<div class="form-signin">
  <h2>Sign up</h2>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :role_type, :value => "admin" %>
    <%= f.hidden_field :access_types, :value => "all" %>
    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-user"></i></span>
        <%= f.text_field :business_name, :placeholder => "Business Name" %>
      </div>
    </div>

    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-envelope"></i></span>
        <%= f.email_field :email, :autofocus => true, :placeholder => "Email Address" %>
      </div>
    </div>


    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-home"></i></span>
        <%= f.text_field :location, :placeholder => "Location" %>
      </div>
    </div>

    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-phone"></i></span>
        <%= f.text_field :phone, :placeholder => "Phone Number" %>
      </div>
    </div>

    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-user"></i></span>
        <%= f.text_field :contact_name, :placeholder => "Contact Name" %>
      </div>
    </div>

    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-lock"></i></span>
        <%= f.password_field :password, :placeholder => "Password" %>
      </div>
    </div>

    <div class="controls">
      <div class="input-prepend">
        <span class="add-on"><i class="icon-lock"></i></span>
          <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %>
      </div>
    </div>

    <div><%= f.submit "Sign up",:class => "btn btn-info" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>